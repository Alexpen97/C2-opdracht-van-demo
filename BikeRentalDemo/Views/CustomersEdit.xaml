<Window x:Class="BikeRentalDemo.Views.CustomersEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BikeRentalDemo.Views"
        mc:Ignorable="d"
        Title="CustomersEdit" Height="450" Width="800">
    <Grid>
        <Grid>
            <DataGrid ItemsSource="{Binding Customers}" Margin="0,0,0.4,48.6" />
            <Button Command="{Binding SaveClick}" Content="Save" HorizontalAlignment="Left" Margin="10,0,0,9.6" VerticalAlignment="Bottom" Width="75"/>

        </Grid>
    </Grid>
</Window>
